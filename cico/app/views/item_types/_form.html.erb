      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label :description, class: "control-label" %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label :notes, class: "control-label" %>
