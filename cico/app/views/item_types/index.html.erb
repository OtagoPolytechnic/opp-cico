<h1>Listing Item Types</h1>

<table>
<% @item_types.each do |item_type| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    
    <td class="list_description">
      <dl>
        <dt><%= item_type.name %></dt>
        <dd><%= truncate(strip_tags(item_type.description), length: 80) %></dd>
        <dt><%= item_type.notes %></dt>
        <dt><%= item_type.retire_date %></dt>
      </dl>
    </td>

    <td class="list_actions">
      <%= link_to 'Show', item_type %><br />
      <%= link_to 'Edit', edit_item_type_path(item_type) %><br />
      <%= link_to 'Destroy', item_type, method: :delete, 
                   data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %> 
</table>

<br />
