<h1>Listing Item Types</h1>

<table>
  <thead>
    <tr>
      <th> name</th>
      <th>Description</th>
      <th>Notes</th>
      <th>Retire date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_types.each do |item_type| %>
      <tr>
        <td><%= item_type. name %></td>
        <td><%= item_type.description %></td>
        <td><%= item_type.notes %></td>
        <td><%= item_type.retire_date %></td>
        <td><%= link_to 'Show', item_type %></td>
        <td><%= link_to 'Edit', edit_item_type_path(item_type) %></td>
        <td><%= link_to 'Destroy', item_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

