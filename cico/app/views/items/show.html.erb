<h1><%= @item.name %></h1>

<table>
  <thead>
    <tr>
      <th>Item Data</th>
      <th>Details</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td>ID:</td>
        <td><%= @item.id %></td>
      </tr>
      <tr>
        <td>Name:</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>Price:</td>
        <td><%= @item.price %></td>
      </tr>
      <tr>
        <td>Asset num:</td>
        <td><%= @item.asset_num %></td>
      </tr>
      <tr>
        <td>Notes:</td>
        <td><%= @item.notes %></td>
      </tr>
      <tr>
        <td>Retired at:</td>
        <td><%= @item.retired_at %></td>
      </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_item_path(@item), :class => "btn btn-success" %>
<%= link_to 'Back', items_path, :class => "btn btn-success" %>
