<!-- Show item page -->
<h1><%= @item.name %></h1>

<!-- Shows individual information about an item -->
<table>
  <thead>
    <tr>
      <th>Item Data</th>
      <th>Details</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td>ID:</td>
        <td><%= @item.id %></td>
      </tr>
      <tr>
        <td>Name:</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>Price:</td>
        <td><%= @item.price %></td>
      </tr>
      <tr>
        <td>Asset num:</td>
        <td><%= @item.asset_num %></td>
      </tr>
      <tr>
        <td>Notes:</td>
        <td><%= @item.notes %></td>
      </tr>
      <tr>
        <td>Retired at:</td>
        <td><%= @item.retired_at %></td>
      </tr>
  </tbody>
</table>

<!-- Back button -->
<%= link_to items_path, class: 'btn btn-primary' do %>
  <span class="glyphicon glyphicon-chevron-left"></span>&nbsp; Back
<% end %>

<!-- Edit button for current item -->
<%= link_to edit_item_path(@item), class: 'btn btn-primary' do %>
  <span class="glyphicon glyphicon-edit"></span>&nbsp; Edit
<% end %>
