<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Price</th>
      <th>Asset num</th>
      <th>Notes</th>
      <th>Retired at</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.asset_num %></td>
        <td><%= item.notes %></td>
        <td><%= item.retired_at %></td>
        <td class="actions">
          <%= link_to("Show", item) %>
          <%= link_to("Edit", edit_item_path(item)) %>
          <%= link_to('Retire') %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path, class: 'btn btn-success' %>