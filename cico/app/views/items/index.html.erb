<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Price</th>
      <th>Asset num</th>
      <th>Notes</th>
      <th>Retired at</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.asset_num %></td>
        <td><%= item.notes %></td>
        <td><%= item.retired_at %></td>
        <td class="actions">
          <%= link_to("Show", item) %>
          <%= link_to("Edit", edit_item_path(item)) %>
          <% if(item.retired_at == nil) %>
            <%= link_to('Retire', { action: 'retire', id: item.id }) %>
          <% else %>
            <%= link_to('Unretire', { action: 'unretire', id: item.id }) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_item_path, class: 'btn btn-success' do %>
  <span class="glyphicon glyphicon-plus"></span>&nbsp; New item
<% end %>